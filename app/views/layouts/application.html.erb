<!DOCTYPE html>
<html>
<head>
  <title>Auctioneer</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <% if flash[:notice] %>
    <p id="notice"><%= flash[:notice] %></p>
  <% end %>

  <% if flash[:alert] %>
    <p id="alert"><%= flash[:alert] %></p>
  <% end %>

  <header>

    <p class='user_info'>
      <% if current_user %>
        Signed in as <%= link_to current_user.email, user_path(current_user.id) %>. <br>
        <%= link_to "Log Out", session_path('current'), :method => :delete %>
      <% else %>
        <%= link_to "Log In", new_session_path %> or
        <%= link_to "Sign Up", new_user_path %>
      <% end %>

    <h1>Auctioneer</h1>

    </p>
  </header>

<%= yield %>

</body>
</html>
