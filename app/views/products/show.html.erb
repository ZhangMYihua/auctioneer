<h4><%= link_to "Back To Products", products_path %></h4>

<h1><%= @product.name %></h1>

<h2><%= @product.description %></h2>

<h3>Starting price = $<%= @product.starting_price %></h3>

<h3>Remaining time:<div id='countdown'><%= @product.remaining_time %></div></h3>

  <% if @product.end_time > DateTime.now.utc%>
    <script>
      $('#countdown').countdown('<%= @product.strf_time %>', function(event) { 
        $(this).text(
          event.strftime('%-D days %-H h %M min %S sec')
        );
      });
    </script>
  <% end %>

<h2>Bids</h2> 

<h3>Top bid: <%= @product.display_bid %>
</h3> 

<% if current_user %>
  <h3>Make a bid</h3>

  <%= form_for([@product, Bid.new]) do |f| %>

    <div class="field">
      <%= f.label :bid_amount_string %><br>
      <%= f.text_field :bid_amount_string %>
    </div>

    <div class="actions" style="margin-top: 10px;">
      <%= f.submit %>
    </div>

  <% end %>

<% else %>
  <p>Please <%= link_to "log in", new_session_path %> to make a bid.</p>

<% end %>
